<button class="btn-test" @onclick="OnButtonClicked">
    @Text
</button>

@code {
    public delegate void OnButtonClick();

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public EventCallback<OnButtonClick> OnClick { get; set; }

    private void OnButtonClicked()
    {
        OnClick.InvokeAsync();
    }
}